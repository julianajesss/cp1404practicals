BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert(input_field.text)
    Label:
        id: output_label
        text: app.km
        color: (1, 1, 0, 1)