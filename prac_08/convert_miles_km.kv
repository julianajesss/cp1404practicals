BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_field
            text: '34'
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
            Button:
                id: down_button
                text: 'Down'
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert()
    Label:
        id: output_field
        text: app.message
        color: (1, 1, 0, 1)